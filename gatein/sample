WORKING_DIR=$GATEIN_HOME
WORKING_TOMCAT=$GATEIN_TOMCAT
VERSION=$GATEIN_VERSION
echo REMOVE DIRECTORY
echo ---------------------------------------------------
rm -rfv $GATEIN_HOME/packaging/pkg/target/tomcat/webapps/samplePortlets
rm -rfv $GATEIN_HOME/packaging/pkg/target/tomcat/webapps/samplePortlets.war
echo ---------------------------------------------------
echo BUILD AND COPY TO WEBAPPS
echo ---------------------------------------------------
cd $GATEIN_HOME/testsuite/webuibasedsamples/
mvn clean install -DskipTests
cp -v $GATEIN_HOME/testsuite/webuibasedsamples/target/samplePortlets.war $WORKING_TOMCAT/webapps/
echo ---------------------------------------------------
