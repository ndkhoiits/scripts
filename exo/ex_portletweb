WORKING_DIR=$PORTAL_HOME
WORKING_TOMCAT=$PORTAL_TOMCAT
VERSION=$PORTAL_VERSION
echo REMOVE DIRECTORY
echo ---------------------------------------------------
rm -rf $WORKING_TOMCAT/webapps/web
rm -rf $WORKING_TOMCAT/webapps/web.war
echo ---------------------------------------------------
echo BUILD AND COPY TO WEBAPPS
echo ---------------------------------------------------
cd $WORKING_DIR/portlet/web
mvn clean install -DskipTests
cp -v  $WORKING_DIR/portlet/web/target/web.war $WORKING_TOMCAT/webapps/
echo ---------------------------------------------------
