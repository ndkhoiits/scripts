WORKING_DIR=$PLATFORM_HOME
WORKING_TOMCAT=$PLATFORM_TOMCAT
VERSION=$PLATFORM_VERSION

echo $WORKING_DIR
echo REMOVE DIRECTORY
echo ---------------------------------------------------
rm -rf $WORKING_TOMCAT/webapps/portal
rm -rf $WORKING_TOMCAT/webapps/portal.war
echo ---------------------------------------------------
echo BUILD AND COPY TO WEBAPPS
echo ---------------------------------------------------
cd $WORKING_DIR/web/portal
mvn clean install
cd $WORKING_DIR/web/portal/target
mv exo.portal.web.portal-$VERSION.war portal.war
cp -v  $WORKING_DIR/web/portal/target/portal.war $WORKING_TOMCAT/webapps/
echo ---------------------------------------------------
echo ---------------------------------------------------
